@page
@model OnlineStorex.Pages.Product.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Online StoreX</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Product: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].BuyerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Store) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
